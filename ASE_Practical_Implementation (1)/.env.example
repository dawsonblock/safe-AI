# Environment Variables for FDQC-Cockpit Production Deployment
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your-api-key-here

# BERT Model Configuration
BERT_MODEL_NAME=bert-base-uncased
BERT_CACHE_DIR=/opt/models/bert_cache
BERT_USE_GPU=true

# Safety Configuration
SAFETY_TIER=GAMMA
REQUIRE_HUMAN_APPROVAL=true
SAFE_MODE=true

# Persistence Configuration
CHECKPOINT_DIR=./checkpoints
AUTO_SAVE_INTERVAL_SECONDS=300
MAX_CHECKPOINTS=10

# Monitoring Configuration
ALERT_RISK_THRESHOLD=0.8
ALERT_ERROR_RATE_THRESHOLD=0.1
ALERT_MEMORY_UTILIZATION_THRESHOLD=0.9

# Slack Alerting (optional)
SLACK_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=fdqc_cockpit.log
