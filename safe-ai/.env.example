# SAFE-AI Governor Environment Variables
# Copy to .env and customize (DO NOT commit .env to git)

# Core settings
SAFEAI_ENABLE=on
SAFEAI_DATA_DIR=./data
SAFEAI_LOG_DIR=./logs
SAFEAI_PROJECT_ROOT=.

# Kill switch
SAFEAI_KILL_SWITCH=./KILL_SWITCH

# Policy
SAFEAI_POLICY_SAFE_MODE=true
SAFEAI_POLICY_AUTONOMY_TIER=gamma
SAFEAI_POLICY_MAX_EDIT_SIZE_BYTES=65536
SAFEAI_POLICY_MAX_TOTAL_SIZE_BYTES=524288

# Sandbox
SAFEAI_SANDBOX_RUNTIME=podman
SAFEAI_SANDBOX_IMAGE=python:3.12-slim
SAFEAI_SANDBOX_CPU_LIMIT=1.0
SAFEAI_SANDBOX_MEMORY_LIMIT=512m
SAFEAI_SANDBOX_TIMEOUT_SECONDS=300
SAFEAI_SANDBOX_NETWORK_MODE=none

# RBAC (CHANGE IN PRODUCTION!)
SAFEAI_JWT_SECRET=development_secret_key_change_me
SAFEAI_JWT_ALGORITHM=RS256
SAFEAI_TOKEN_EXPIRY_SECONDS=3600

# API
SAFEAI_API_HOST=0.0.0.0
SAFEAI_API_PORT=8000
SAFEAI_API_WORKERS=1

# Logging
SAFEAI_LOG_LEVEL=INFO
SAFEAI_LOG_FORMAT=json
